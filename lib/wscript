
def build(bld):
    bld(name = 'libincs', export_includes = ['.'])
    bld.shlib(target = 'ndarray', source = 'ndarray.cpp', use='npltypes slicer libincs')
    bld.shlib(target = 'slicer', source = 'slicer.cpp', use='libincs')
    bld.shlib(target = 'mrimage', source = 'mrimage.cpp', use='ZLIB ndarray libincs' )
    bld.shlib(target = 'npltypes', source = 'npltypes.cpp', use='libincs')
